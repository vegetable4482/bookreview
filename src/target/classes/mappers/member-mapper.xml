<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.member-mapper">
<!-- 회원등록 -->
<insert id="insert"
			  parameterType = "com.kh.myapp.member.dto.MemberDTO">			
						
		insert into member (id,pw,tel,gender,region,nickname,cdate)
		values(#{id},#{pw},#{tel},#{gender},#{region},#{nickname},sysdate)
										
</insert>

<!-- 회원수정 -->
<update id="modify"
				parameterType="com.kh.myapp.member.dto.MemberDTO">
				
					update member
					set tel=#{tel},
									nickname=#{nickname},
									gender=#{gender},
									region=#{region},
									udate=sysdate,
									originfn = #{originFn},
									randomfn = #{randomFn}
						where id=#{id} and pw=#{pw}
</update>
<!-- 회원 비밀번호 변경 -->
<update id="changePw"
				parameterType="com.kh.myapp.member.dto.PasswdDTO">
				
				update member 
					 set pw=#{toPW}
				 where id=#{id}
					 	and pw=#{fromPW}
				
				
</update>
<!-- 회원삭제(회원용:탈퇴) -->
<delete id="delete"
				parameterType="Map">

			delete from member where id=#{id} and pw=#{pw}
</delete>			

<!-- 회원삭제(회원용:관리자용) -->
<delete id="adminDelete"
				parameterType="String">
     			 delete from member where id=#{id} 
</delete>

<!-- 회원 개인 조회 -->
<select id ="getMember"
				parameterType="String"
				resultType="com.kh.myapp.member.dto.MemberDTO">
					select id,pw,tel,nickname,gender,region,randomfn
					from member
					where id=#{id}

</select>

<!-- 회원 목록 조회(관리자용) -->
<select id="getMemberList"
				resultType="com.kh.myapp.member.dto.MemberDTO">
					select id,pw,tel,nickname,gender,region,birth,cdate,udate
					from member
</select>




</mapper>